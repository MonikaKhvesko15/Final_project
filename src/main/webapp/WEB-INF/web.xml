<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/javaee/web-app_4_0.xsd"
version="4.0">

  <display-name>Final_project</display-name>

  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>com.epam.web.controller.MainController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>language</filter-name>
    <filter-class>com.epam.web.controller.LocaleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>language</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>security</filter-name>
    <filter-class>com.epam.web.controller.SecurityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>security</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <error-page>
    <error-code>403</error-code>
    <location>/views/error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>com.epam.web.exception.ConnectionPoolException</exception-type>
    <location>/views/error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>com.epam.web.exception.ServiceException</exception-type>
    <location>/views/error.jsp</location>
  </error-page>
</web-app>
